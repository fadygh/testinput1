<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.fadytraining.testinput.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاسم"
            android:inputType="text"/>
        <EditText
            android:id="@+id/mobile_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:hint="رقم الهاتف"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/email_address_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:hint="البريد الاكتروني"
            android:inputType="textEmailAddress"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
            android:id="@+id/marital_status_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/marital_status"/>

            <TextView
                android:id="@+id/marital_status_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="ألوضع العائلي" />

        </LinearLayout>
        <EditText
            android:id="@+id/occupation_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="المهنة"
            android:inputType="text"/>

        <Spinner
            android:id="@+id/blood_type_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/blood_type"/>



        <EditText
            android:id="@+id/time_of_participation_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" فترة وجودك في الفوج"
            android:inputType="text"/>


        <EditText
            android:id="@+id/name_of_unit_of_participation_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الوحدة التي انتميت اليها"
            android:inputType="text"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/yes_field"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:onClick="Visible"
                    android:text="نعم"/>

                <RadioButton
                    android:id="@+id/no_field"
                    android:layout_width="131dp"
                    android:layout_height="wrap_content"
                    android:onClick="inVisible"
                    android:text="كلا"/>

                </RadioGroup>
            </LinearLayout>


            <TextView
                android:id="@+id/celebrate_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                android:text="هل احتفلت بأنطلاقك"/>

        </LinearLayout>



        <EditText
            android:id="@+id/logo_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ما هو شعارك"
            android:visibility="gone"
            android:inputType="text"/>

        <EditText
            android:id="@+id/godfather_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="من هو عرابك"
            android:inputType="text"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/how_can_you_help_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" بماذا تستطيع ان تساعد الفوج او القدامى"
            android:inputType="text"/>

    </LinearLayout>

</ScrollView>
